<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/iv_product_photo1"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_sidemenu_header" />

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_product_photo1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:gravity="center"
        android:shadowRadius="2.0"
        android:text="Jhon Doe"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_product_photo"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp" />

        <TextView
            android:id="@+id/tv_notif_tips_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_product_photo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowRadius="2.0"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </RelativeLayout>
</RelativeLayout>