<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.twittle">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".Dashboard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".ProductPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".ProductDetails"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".AboutUs"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".TermsCondition"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".Privacy"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".ProductCart"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".Shippingactivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".OrderCancellation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".Replacement"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".Refund"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".Feedbackactivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".ContactUs"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".SearchedProductPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".ShippingContent"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent"
            android:windowSoftInputMode="stateHidden|adjustPan" />
    </application>
</manifest>